<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/item_file_icon"
        android:layout_width="240.0dip"
        android:layout_height="240.0dip"
        android:background="@drawable/item_icon_selector"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_file_src"
            android:layout_width="220.0dip"
            android:layout_height="220.0dip"
            android:layout_gravity="center"
            android:background="@drawable/file_icon_apk" />

        <ImageView
            android:id="@+id/item_file_apk"
            android:layout_width="96.0dip"
            android:layout_height="96.0dip"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="80.0dip" />

        <ImageView
            android:id="@+id/item_file_flag"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/item_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40.0dip"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="36.0sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_file_name"
        style="@style/title_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_file_icon"
        android:layout_centerInParent="true"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="24.0sp" />
</RelativeLayout>