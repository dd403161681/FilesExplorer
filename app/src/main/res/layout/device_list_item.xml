<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_device_rootview"
    android:layout_width="wrap_content"
    android:layout_height="100.0dip"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/list_device_back"
        android:layout_width="96.0dip"
        android:layout_height="96.0dip"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/list_device_icon"
            android:layout_width="96.0dip"
            android:layout_height="96.0dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/list_device_name"
        style="@style/title_style"
        android:layout_width="400.0dip"
        android:layout_height="100.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50.0dip"
        android:layout_toRightOf="@id/list_device_back"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center|left"
        android:singleLine="true" />

    <TextView
        android:id="@+id/list_device_capicity"
        style="@style/title_style"
        android:layout_width="240.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:enabled="false"
        android:focusable="false"
        android:gravity="right"
        android:singleLine="true" />

    <View
        style="@style/dividingline"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>